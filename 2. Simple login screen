#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main(void) {
  int id, pass; //아이디와 비밀번호를 저장할 변수 선언
  printf("Please enter your ID and password using 4 digits.\n"); //4자리 아이디와 비밀번호 입력 요청 메시지

  printf("id: ____\b\b\b\b"); //아이디 입력 시 밑줄이 지워지도록 하는 코드
  scanf("%d", &id); //아이디 입력 받기

  printf("pass: ____\b\b\b\b"); //비밀번호 입력 시 밑줄이 지워지도록 하는 코드
  scanf("%d", &pass); //비밀번호 입력 받기

  //입력된 아이디와 비밀번호 출력
  printf("The ID entered is \"%d\" and the password is \"%d\"\n", id, pass);
  return 0;
}
